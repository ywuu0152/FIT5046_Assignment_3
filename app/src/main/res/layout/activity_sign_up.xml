<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_scrollView"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content"
        tools:context=".SignUp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="center"
            app:srcCompat="@drawable/logo"/>

        <TextView
            android:id="@+id/tv_Email"
            android:paddingTop="30dp"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="    Email"
            android:layout_marginTop="?attr/actionBarSize"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/et_newUserName"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/tv_Email"
            android:paddingTop="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_newPassword"
            android:layout_width="90dp"
            android:layout_below="@+id/tv_Email"
            android:paddingTop="30dp"
            android:layout_height="60dp"
            android:text="Password"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/et_newPassword"
            android:layout_below="@+id/et_newUserName"
            android:layout_toRightOf="@+id/tv_newPassword"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:layout_width="220dp"
            android:paddingTop="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_confirmPassword"
            android:layout_below="@+id/tv_newPassword"
            android:layout_height="60dp"
            android:layout_width="155dp"
            android:text="Confirm
            Password"
            android:paddingTop="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <EditText
            android:id="@+id/et_confirmPassword"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_below="@+id/tv_newPassword"
            android:layout_marginLeft="-62dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/tv_confirmPassword"
            android:inputType="textPassword"
            android:paddingTop="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/b_submit"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/et_confirmPassword"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="Submit"
            />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b_submit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:visibility="invisible" />


    </RelativeLayout>


</ScrollView>